{
  "manifest_version": 3,
  "name": "Prompt Slim",
  "version": "1.0",
  "description": "Optimizes user prompts on LLM websites using Google Gemini.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://gemini.google.com/*",
    "*://claude.ai/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*"
      ],
      "js": ["js/content.js"],
      "css": ["css/style.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Prompt Slim"
  }
}